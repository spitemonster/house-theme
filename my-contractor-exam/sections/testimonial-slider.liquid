{% liquid
%}

{{ "testimonial-slider.css" | asset_url | stylesheet_tag }}

<div class="testimonial-slider__inner">
  <div class="testimonial-slider__heading">
    <h3 class="color-white display-md">{{ section.settings.heading }}</h3>
  </div>
  <div class="d-flex justify-content-center">
    {% for block in section.blocks %}
      {% assign testimonial = block.settings %}
      {% render 'testimonial-card'
        , title: testimonial.testimonial_title
        , content: testimonial.testimonial_content
        , image: testimonial.testimonial_image %}
    {% endfor %}
  </div>
</div>

<script src="{{ "testimonial-slider.js" | asset_url }}" defer></script>

{% schema %}
  {
    "name": "Testimonial Slider",
    "tag": "section",
    "class": "testimonial-slider container--min background-color-blue-500 text-center",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Section Heading",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
      }
    ],
    "blocks": [
      {
        "name": "Testimonial",
        "type": "testimonial",
        "settings": [
          {
            "type": "image_picker",
            "id": "testimonial_image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "testimonial_title",
            "label": "Title"
          }, {
            "type": "richtext",
            "id": "testimonial_content",
            "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}